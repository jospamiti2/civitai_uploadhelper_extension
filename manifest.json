{
  "manifest_version": 3,
  "name": "Civitai Helper",
  "version": "0.1",
  "description": "A simple extension to prove the setup works.",
  "content_scripts": [
    {
      "js": [
        "dist/scripts/content.js"
      ],
      "matches": [
        "https://civitai.com/posts/*"
      ]
    }
  ],
  "permissions": [
    "storage" 
  ],  
  "sandbox": {
    "pages": [ "scripts/sandbox.html" ]
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts"
  },  
  "action": {
    "default_icon": {
      "48": "icons/CivitAiUploadAHelperIcon_48x48.png"
    },
    "default_title": "Civitai Helper"
  },
  "icons": {
     "48": "icons/CivitAiUploadAHelperIcon_48x48.png",
     "128": "icons/CivitAiUploadAHelperIcon_128x128.png" 
  },  
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [ "scripts/sandbox.html", "scripts/sandbox.js", "lib/mediainfo.min.js", "lib/MediaInfoModule.wasm" ],
      "matches": [ "https://civitai.com/*" ]
    }
  ]
}